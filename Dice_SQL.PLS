CREATE OR REPLACE FUNCTION DICE(
    ROLL IN VARCHAR)
  RETURN NUMBER
IS
  L_ROLL   VARCHAR(2):=ROLL;
  I_NUMBER NUMBER(1):='0';
BEGIN
  IF L_ROLL='Y' THEN
  DBMS_OUTPUT.PUT_LINE('ROOLING DICE');    
    IF I_NUMBER=0 THEN    
    SELECT FLOOR(DBMS_RANDOM.VALUE(1,6))INTO I_NUMBER FROM DUAL;    
    END IF;
  END IF;
RETURN I_NUMBER;  
END DICE;